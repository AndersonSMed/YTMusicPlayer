{
  "manifest_version": 2,
  "name": "Extension",
  "description": "Youtube Music Player",
  "version": "0.1",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Youtube Music Player Popup"
  },
  "content_scripts": [
    {
      "matches": [
        "http://music.youtube.com/*",
        "https://music.youtube.com/*"
      ],
      "js": [
        "scripts/yt-music.js",
        "scripts/content.js" 
      ]
    }
  ],
  "background": {
    "scripts": [
      "scripts/background.js"
    ]
  },
  "permissions": [
    "storage"
  ]
}